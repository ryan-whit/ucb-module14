<div class="">
  <div class="">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="">
  <div class="">
    <h3>Create a New Post:</h3>

    <form class="">
      <div class="">
        <label for="post-name">post title:</label>
        <input class="" type="text" id="post-name" name="post-name" />
      </div>
      <div class="">
        <label for="post-desc">contents:</label>
        <textarea class="" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="">
      <div class="">
        <h4><a href="/posts/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="">
        <button class="" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
